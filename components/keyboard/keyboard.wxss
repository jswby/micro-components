/* components/keyboard/keyboard.wxss */
.wx-mask{
    position: fixed;
    z-index: 1000;
    top: 0;
    right: 0;
    left: 0;
    bottom: 0;
    background: rgba(0, 0, 0, 0.3);
}
.wx-keyboard{
    position: fixed;
    z-index: 5000;
    width: 100%;
    bottom: 0;
    background-color: #f7f3de;
    text-align: center;
    border-radius: 1rpx;
    overflow: auto;
}

.btnView {
    padding-bottom: 1rpx;
    width: 100%;
    display: flex;
    flex-direction: row;
    justify-content: center; 
}

.keyboard_btn {
    margin: 5rpx;
    width: 30rpx;
    padding-left: 1rpx;
    padding-right: 1rpx; 
    background-color: #e1d6bc;
    color: #8a8374;
	/* font-family: Rosario; */
}

.keyboard_btn_hover {
    background-color: #C4BBA4;
}